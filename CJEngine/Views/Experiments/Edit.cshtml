@model CJEngine.Models.Experiment;

@{
    ViewData["Title"] = "Edit";
}


<h1>Edit</h1>

<h4>Experiment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ExperimentParameters" class="control-label"></label>
                <select name="Parameters" asp-for="ExperimentParameters" class="form-control" id="parametersList" onchange="this.options[this.selectedIndex].onclick()">
                    <option value="Default" class="dropdown-menu">Select Saved Parameters</option>
                    <option value="New" class="dropdown-item" onclick=" document.getElementById('hiddenButton').click()">Create New Parameters...</option>
                 <!-- A for loop that goes through each one goes in here, but need access to view model??-->
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
