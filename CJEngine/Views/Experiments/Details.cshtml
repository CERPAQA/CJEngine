@model CJEngine.Models.Experiment

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Experiment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Experiment Parameter Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExperimentParameters.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExperimentParameters.ShowTimer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExperimentParameters.ShowTimer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExperimentParameters.ShowTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExperimentParameters.ShowTitle)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Experiment Judges
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ExpJudges)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(judge => item.Judge.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Experiment Artefacts
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ExpArtefacts)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(judge => item.Artefact.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>