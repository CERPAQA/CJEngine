@model CJEngine.ViewModel.ExperimentParameterViewModel;
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Experiment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Experiment.Name" class="control-label"></label>
                <input asp-for="Experiment.Name" class="form-control" />
                <span asp-validation-for="Experiment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Experiment.Description" class="control-label"></label>
                <input asp-for="Experiment.Description" class="form-control" />
                <span asp-validation-for="Experiment.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parameters" class="control-label"></label>
                <select name="Parameters" onchange="javascript:handleSelect(this)" asp-for="Parameters" class="form-control">
                    <option value="/ExperimentParameters/Create">Create New</option>
                    <option value="1">Test</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">
    function handleSelect(elm) {
        if (elm.value == "/ExperimentParameters/Create") {
            window.location = elm.value;
        } else {
            window.location = "/Experiments/Create"
        } 
    }
</script>
