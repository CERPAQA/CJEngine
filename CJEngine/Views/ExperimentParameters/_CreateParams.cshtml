@model CJEngine.ViewModel.CreateExperimentViewModel;

@{
    ViewData["Title"] = "Create";
}

<h4>Experiment Parameters</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="ExperimentParameters">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                    <label asp-for="ExperimentParameters.Description" class="control-label"></label>
                    <input asp-for="ExperimentParameters.Description" />
                    <span asp-validation-for="ExperimentParameters.Description" class="text-danger"></span>
            </div> 
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ExperimentParameters.ShowTitle" /> @Html.DisplayNameFor(model => model.ExperimentParameters.ShowTitle)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ExperimentParameters.ShowTimer" /> @Html.DisplayNameFor(model => model.ExperimentParameters.ShowTimer)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
