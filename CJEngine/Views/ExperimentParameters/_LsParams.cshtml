@model CJEngine.ViewModel.CreateExperimentViewModel;
<div>
    <div class="form-group">
        <label asp-for="Experiment.ExperimentParameters" class="control-label"></label>
        <select name="Parameters" asp-for="Experiment.ExperimentParameters" class="form-control" id="parametersList">
            <option value="Default" class="dropdown-menu">Select Saved Parameters</option>
            <option value="New" class="dropdown-item" data-target="#parameters" data-toggle="modal">Create New Parameters...</option>
            @foreach (var item in Model.ExperimentParametersList)
            {
                <option>@item.Description</option>
            }
        </select>
    </div>
</div>
